{
  "version": "2.1.0",
  "$schema": "https://json.schemastore.org/sarif-2.1.0.json",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "VerificationIntegrityAgent",
          "version": "1.0.0",
          "informationUri": "https://github.com/canstralian/red-team-mcp/tree/main/src/verification",
          "rules": [
            {
              "id": "VIA000-confidence-critical",
              "name": "Critical confidence issue",
              "shortDescription": {
                "text": "Critical verification confidence issue detected."
              },
              "fullDescription": {
                "text": "Multiple security controls are missing or misconfigured, resulting in critical confidence level for verification operations."
              },
              "helpUri": "https://github.com/canstralian/red-team-mcp/blob/main/docs/verification-integrity.md#confidence",
              "defaultConfiguration": {
                "level": "error"
              },
              "properties": {
                "tags": ["verification", "confidence", "policy"]
              }
            },
            {
              "id": "VIA001-freshness-missing",
              "name": "Freshness check missing",
              "shortDescription": {
                "text": "GPG signature freshness checks are missing."
              },
              "fullDescription": {
                "text": "Scripts invoking GPG verification must compare signature time to a trusted time source and enforce maximum age to prevent rollback attacks. Kicksecure best practice: use sdwdate for trusted time and validate freshness."
              },
              "helpUri": "https://github.com/canstralian/red-team-mcp/blob/main/docs/verification-integrity.md#freshness",
              "defaultConfiguration": {
                "level": "error"
              },
              "properties": {
                "tags": ["supply-chain", "time-integrity", "policy", "kicksecure"]
              }
            },
            {
              "id": "VIA002-future-timestamp",
              "name": "Signature time in the future",
              "shortDescription": {
                "text": "Detected signature timestamp newer than trusted host time."
              },
              "fullDescription": {
                "text": "Reject signatures with future timestamps; this indicates potential time manipulation attack. Verify trusted time source health (sdwdate sync status)."
              },
              "helpUri": "https://github.com/canstralian/red-team-mcp/blob/main/docs/verification-integrity.md#future-time",
              "defaultConfiguration": {
                "level": "error"
              },
              "properties": {
                "tags": ["time-manipulation", "policy", "kicksecure"]
              }
            },
            {
              "id": "VIA003-notation-missing",
              "name": "Filename/hash notation missing",
              "shortDescription": {
                "text": "Signature notation binding to artifact name or hash is missing."
              },
              "fullDescription": {
                "text": "Require notation (e.g., file@name or hash@sha256) to bind signatures to artifacts and prevent substitution attacks. Kicksecure Digital Signature Policy requires notation binding."
              },
              "helpUri": "https://github.com/canstralian/red-team-mcp/blob/main/docs/verification-integrity.md#notation",
              "defaultConfiguration": {
                "level": "warning"
              },
              "properties": {
                "tags": ["tampering", "supply-chain", "kicksecure"]
              }
            },
            {
              "id": "VIA004-apt-not-torified",
              "name": "APT not using required secure transport",
              "shortDescription": {
                "text": "APT usage not torified/pinned as per policy."
              },
              "fullDescription": {
                "text": "Update channels must use approved, pinned, or torified transport to reduce targeted update attacks. Kicksecure torifies APT by default for enhanced security against network adversaries."
              },
              "helpUri": "https://github.com/canstralian/red-team-mcp/blob/main/docs/verification-integrity.md#apt-transport",
              "defaultConfiguration": {
                "level": "warning"
              },
              "properties": {
                "tags": ["updates", "supply-chain", "kicksecure"]
              }
            },
            {
              "id": "VIA005-timeouts-missing",
              "name": "Verification timeouts missing",
              "shortDescription": {
                "text": "GPG verification lacks verify/kill timeouts."
              },
              "fullDescription": {
                "text": "Set verify and kill-after timeouts to prevent endless-data DoS conditions during GPG verification operations."
              },
              "helpUri": "https://github.com/canstralian/red-team-mcp/blob/main/docs/verification-integrity.md#timeouts",
              "defaultConfiguration": {
                "level": "warning"
              },
              "properties": {
                "tags": ["availability", "dos", "policy"]
              }
            }
          ]
        }
      },
      "results": []
    }
  ]
}
