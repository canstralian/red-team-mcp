{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastMCP Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "args": [
        "--host",
        "localhost",
        "--port",
        "3001"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "MCP_DEBUG": "1",
        "LOG_LEVEL": "DEBUG"
      },
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true
    },
    {
      "name": "Python: Run Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": [
        "discover",
        "-s",
        "tests",
        "-p",
        "test_*.py",
        "-v"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Run Specific Test",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": [
        "${file}"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": true
    },
    {
      "name": "Python: Remote Attach (Docker)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src",
          "remoteRoot": "/app/src"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Verification Agent",
      "type": "debugpy",
      "request": "launch",
      "module": "src.verification.verification_integrity_agent",
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "DEBUG"
      },
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Profile with cProfile",
      "type": "debugpy",
      "request": "launch",
      "module": "cProfile",
      "args": [
        "-o",
        "profile.stats",
        "${workspaceFolder}/src/main.py"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
